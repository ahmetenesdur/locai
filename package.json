{
	"name": "ai-localization-tool",
	"version": "2.0.0",
	"type": "module",
	"main": "src/core/orchestrator.js",
	"directories": {
		"src": "src"
	},
	"bin": {
		"localize": "./bin/localize.js"
	},
	"scripts": {
		"start": "node bin/localize.js",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write \"**/*.{js,json,md,jsx,ts,tsx,css}\"",
		"format:check": "prettier --check \"**/*.{js,json,md,jsx,ts,tsx,css}\""
	},
	"keywords": [
		"translation",
		"localization",
		"i18n",
		"nextjs",
		"ai-translation"
	],
	"author": {
		"name": "Ahmet Enes Dur",
		"email": "ahmetenesdur@gmail.com",
		"url": "https://github.com/ahmetenesdur"
	},
	"license": "ISC",
	"description": "CLI tool for translating Next.js locale files with advanced settings and multiple AI providers",
	"engines": {
		"node": ">=14.13.0"
	},
	"exports": {
		".": "./src/core/orchestrator.js",
		"./orchestrator": "./src/core/orchestrator.js",
		"./translator": "./src/commands/translator.js"
	},
	"dependencies": {
		"axios": "1.13.1",
		"commander": "^14.0.2",
		"dotenv": "^17.2.3",
		"lru-cache": "^11.2.2",
		"p-limit": "^7.2.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.5.0",
		"prettier": "^3.6.2"
	},
	"files": [
		"bin/",
		"src/"
	]
}
